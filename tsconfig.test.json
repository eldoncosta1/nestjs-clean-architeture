{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "vitest.config.ts",
    "vitest.config.e2e.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
